{
    "gpio_pins": {
        "sensors": {
            "temp_humidity": {
                "pin": 4,
                "type": "DHT22",
                "voltage": "3.3V",
                "current": "5mA",
                "description": "Capteur température et humidité DHT22"
            },
            "light": {
                "pin": 17,
                "type": "LDR",
                "voltage": "3.3V",
                "current": "1mA",
                "description": "Capteur de lumière LDR"
            },
            "air_quality": {
                "pin": 27,
                "type": "MQ135",
                "voltage": "5V",
                "current": "120mA",
                "description": "Capteur qualité de l'air MQ135"
            },
            "water_level": {
                "trigger_pin": 20,
                "echo_pin": 21,
                "type": "HC-SR04P",
                "voltage": "3.3V",
                "current": "15mA",
                "description": "Capteur niveau d'eau réservoir HC-SR04P"
            },
            "radiator_temp": {
                "pin": 26,
                "type": "DS18B20",
                "voltage": "3.3V",
                "current": "1mA",
                "description": "Température radiateur (sécurité) DS18B20"
            }
        },
        "actuators": {
            "heating_relay": {
                "pin": 18,
                "type": "relay",
                "voltage": "5V",
                "current": "30mA",
                "description": "Relais chauffage"
            },
            "humidity_relay": {
                "pin": 23,
                "type": "relay",
                "voltage": "5V",
                "current": "30mA",
                "description": "Relais pulvérisateur"
            },
            "feeding_servo": {
                "pin": 12,
                "type": "servo",
                "voltage": "5V",
                "current": "100-250mA",
                "frequency": 50,
                "description": "Servo trappe alimentation"
            },
            "light_relay": {
                "pin": 24,
                "type": "relay",
                "voltage": "5V",
                "current": "30mA",
                "description": "Relais éclairage LED 12V"
            },
            "fan_relay": {
                "pin": 25,
                "type": "relay",
                "voltage": "5V",
                "current": "30mA",
                "description": "Relais ventilateurs"
            },
            "ultrasonic_mist": {
                "pin": 22,
                "type": "ultrasonic_transducer",
                "voltage": "5V",
                "current": "50mA",
                "power_watts": 2.5,
                "frequency": 1700000,
                "pwm_frequency": 1000,
                "description": "Transducteur ultrasonique ANGEEK 1/2 avec contrôle PWM"
            }
        },
        "interface": {
            "rotary_encoder": {
                "clk_pin": 5,
                "dt_pin": 6,
                "sw_pin": 13,
                "type": "rotary_encoder",
                "voltage": "3.3V",
                "current": "negligible",
                "pull_up": true,
                "description": "Encodeur rotatif pour navigation menu"
            },
            "lcd_st7735": {
                "type": "ST7735",
                "resolution": "128x160",
                "spi_pins": {
                    "dc": 8,
                    "cs": 7,
                    "rst": 9
                },
                "voltage": "3.3V",
                "current": "150mA",
                "backlight_pin": 10,
                "description": "Écran LCD couleur ST7735"
            }
        },
        "status": {
            "status_led": {
                "pin": 19,
                "type": "led",
                "voltage": "3.3V",
                "current": "20mA",
                "description": "LED de statut système"
            }
        }
    },
    "pin_assignments": {
        "TEMP_HUMIDITY_PIN": 4,
        "LIGHT_SENSOR_PIN": 17,
        "HEATING_RELAY_PIN": 18,
        "HUMIDITY_RELAY_PIN": 23,
        "FEEDING_SERVO_PIN": 12,
        "LIGHT_RELAY_PIN": 24,
        "FAN_RELAY_PIN": 25,
        "STATUS_LED_PIN": 19,
        "WATER_LEVEL_TRIGGER_PIN": 20,
        "WATER_LEVEL_ECHO_PIN": 21,
        "ULTRASONIC_MIST_PIN": 22,
        "RADIATOR_TEMP_PIN": 26,
        "AIR_QUALITY_PIN": 27,
        "ROTARY_ENCODER_CLK_PIN": 5,
        "ROTARY_ENCODER_DT_PIN": 6,
        "ROTARY_ENCODER_SW_PIN": 13
    },
    "power_supply": {
        "main_voltage": "5V",
        "led_strip_voltage": "12V",
        "servo_voltage": "5V",
        "sensors_voltage": "3.3V",
        "relay_voltage": "5V",
        "ultrasonic_voltage": "5V"
    },
    "hardware_config": {
        "servo": {
            "feeding_trap": {
                "open_angle": 90,
                "close_angle": 0,
                "open_duration": 5,
                "min_pulse": 500,
                "max_pulse": 2500
            }
        },
        "relay": {
            "active_high": false,
            "default_state": false,
            "safety_delay": 100
        },
        "fan": {
            "count": 4,
            "voltage": "5V",
            "current_per_fan": "200mA",
            "total_current": "800mA",
            "control": "relay",
            "min_runtime": 30
        },
        "led_strip": {
            "voltage": "12V",
            "current_per_meter": "600mA",
            "length_meters": 1,
            "total_power": "7.2W",
            "control": "relay_with_converter"
        },
        "ultrasonic_mist": {
            "voltage": "5V",
            "current": "50mA",
            "power_watts": 2.5,
            "frequency": 1700000,
            "pwm_frequency": 1000,
            "max_continuous_time": 300,
            "cooldown_time": 60,
            "description": "Transducteur ultrasonique ANGEEK 1/2 avec contrôle PWM"
        },
        "camera": {
            "type": "CSI",
            "resolution": "1920x1080",
            "framerate": 30,
            "format": "MJPEG",
            "description": "Caméra CSI pour surveillance terrarium",
            "stream_port": 8080,
            "capture_path": "/var/www/html/captures"
        },
        "lcd": {
            "type": "ST7735",
            "resolution": "128x160",
            "spi_pins": {
                "dc": 8,
                "cs": 7,
                "rst": 9
            },
            "voltage": "3.3V",
            "current": "150mA",
            "backlight_pin": 10,
            "rotation": 0,
            "color_mode": "RGB565"
        },
        "menu": {
            "rotary_encoder": {
                "clk_pin": 5,
                "dt_pin": 6,
                "sw_pin": 13
            },
            "debounce_time": 50,
            "long_press_time": 1000,
            "rotation_sensitivity": 1,
            "items_per_page": 6
        }
    },
    "communication": {
        "spi": {
            "enabled": true,
            "speed": 4000000,
            "mode": 0,
            "bits_per_word": 8
        },
        "i2c": {
            "enabled": true,
            "bus": 1,
            "address": "0x48"
        },
        "onewire": {
            "enabled": true,
            "pin": 26,
            "devices": ["DS18B20"]
        }
    }
}

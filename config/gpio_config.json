{
    "pins": {
        "sensors": {
            "temp_humidity": {
                "pin": 4,
                "type": "DHT22",
                "voltage": "3.3V",
                "current": "5mA",
                "description": "Capteur température et humidité"
            },
            "light": {
                "pin": 17,
                "type": "LDR",
                "voltage": "3.3V",
                "current": "1mA",
                "description": "Capteur de lumière"
            },
            "air_quality": {
                "pin": 27,
                "type": "MQ135",
                "voltage": "5V",
                "current": "120mA",
                "description": "Capteur qualité de l'air",
                "controller": "air_quality"
            }
        },
        "actuators": {
            "heating_relay": {
                "pin": 18,
                "type": "relay",
                "voltage": "5V",
                "current": "30mA",
                "description": "Relais chauffage"
            },
            "humidity_relay": {
                "pin": 23,
                "type": "relay",
                "voltage": "5V",
                "current": "30mA",
                "description": "Relais pulvérisateur"
            },
            "feeding_servo": {
                "pin": 12,
                "type": "servo",
                "voltage": "5V",
                "current": "100-250mA",
                "frequency": 50,
                "description": "Servo trappe alimentation"
            },
            "light_relay": {
                "pin": 24,
                "type": "relay",
                "voltage": "5V",
                "current": "30mA",
                "description": "Relais éclairage LED 12V"
            },
            "fan_relay": {
                "pin": 25,
                "type": "relay",
                "voltage": "5V",
                "current": "30mA",
                "description": "Relais ventilateurs"
            },
            "buzzer": {
                "pin": 22,
                "type": "buzzer",
                "voltage": "3.3V",
                "current": "20-40mA",
                "description": "Transducteur sonore"
            },
            "lcd_display": {
                "type": "ST7735",
                "voltage": "3.3V",
                "current": "150mA",
                "description": "Écran LCD couleur ST7735",
                "controller": "lcd_menu"
            }
        },
        "inputs": {
            "menu_up_button": {
                "pin": 5,
                "type": "button",
                "voltage": "3.3V",
                "current": "negligible",
                "pull_up": true,
                "description": "Bouton menu - Navigation haut"
            },
            "menu_down_button": {
                "pin": 6,
                "type": "button",
                "voltage": "3.3V",
                "current": "negligible",
                "pull_up": true,
                "description": "Bouton menu - Navigation bas"
            },
            "menu_select_button": {
                "pin": 13,
                "type": "button",
                "voltage": "3.3V",
                "current": "negligible",
                "pull_up": true,
                "description": "Bouton menu - Sélection"
            },
            "menu_back_button": {
                "pin": 19,
                "type": "button",
                "voltage": "3.3V",
                "current": "negligible",
                "pull_up": true,
                "description": "Bouton menu - Retour"
            }
        },
        "status": {
            "status_led": {
                "pin": 13,
                "type": "led",
                "voltage": "3.3V",
                "current": "20mA",
                "description": "LED de statut"
            },
            "power_led": {
                "pin": 19,
                "type": "led",
                "voltage": "3.3V",
                "current": "20mA",
                "description": "LED d'alimentation"
            }
        }
    },
    "power_supply": {
        "main_voltage": "5V",
        "led_strip_voltage": "12V",
        "servo_voltage": "5V",
        "sensors_voltage": "3.3V",
        "relay_voltage": "5V"
    },
    "servo_config": {
        "feeding_trap": {
            "open_angle": 90,
            "close_angle": 0,
            "open_duration": 5
        }
    },
    "relay_config": {
        "active_high": false,
        "default_state": false
    },
    "fan_config": {
        "count": 4,
        "voltage": "5V",
        "current_per_fan": "200mA",
        "total_current": "800mA",
        "control": "relay"
    },
    "led_strip_config": {
        "voltage": "12V",
        "current_per_meter": "600mA",
        "length_meters": 1,
        "total_power": "7.2W",
        "control": "relay_with_converter"
    },
    "buzzer_config": {
        "voltage": "3.3V",
        "current": "30mA",
        "frequency_range": "2000-4000Hz"
    },
    "lcd_config": {
        "type": "ST7735",
        "resolution": "128x160",
        "spi_pins": {
            "dc": 8,
            "cs": 7,
            "rst": 9
        },
        "voltage": "3.3V",
        "current": "150mA",
        "backlight_pin": 10
    },
    "menu_config": {
        "buttons": {
            "up": 5,
            "down": 6,
            "select": 13,
            "back": 19
        },
        "debounce_time": 200,
        "long_press_time": 1000
    }
} 
{
    "pins": {
        "sensors": {
            "temp_humidity": {
                "pin": 4,
                "type": "DHT22",
                "voltage": "3.3V",
                "current": "5mA",
                "description": "Capteur température et humidité DHT22",
                "controller": "temperature_controller"
            },
            "light": {
                "pin": 17,
                "type": "LDR",
                "voltage": "3.3V",
                "current": "1mA",
                "description": "Capteur de lumière LDR",
                "controller": "light_controller"
            },
            "air_quality": {
                "pin": 27,
                "type": "MQ135",
                "voltage": "5V",
                "current": "120mA",
                "description": "Capteur qualité de l'air MQ135",
                "controller": "air_quality_controller"
            },
            "water_level": {
                "trigger_pin": 20,
                "echo_pin": 21,
                "type": "HC-SR04P",
                "voltage": "3.3V",
                "current": "15mA",
                "min_distance": 5,
                "max_distance": 30,
                "description": "Capteur niveau d'eau réservoir HC-SR04P",
                "controller": "water_level_controller"
            },
            "radiator_temp": {
                "pin": 26,
                "type": "DS18B20",
                "voltage": "3.3V",
                "current": "1mA",
                "address": "auto",
                "description": "Température radiateur (sécurité) DS18B20",
                "controller": "radiator_temp_controller"
            }
        },
        "actuators": {
            "heating_relay": {
                "pin": 18,
                "type": "relay",
                "voltage": "5V",
                "current": "30mA",
                "description": "Relais chauffage",
                "controller": "temperature_controller"
            },
            "humidity_relay": {
                "pin": 23,
                "type": "relay",
                "voltage": "5V",
                "current": "30mA",
                "description": "Relais pulvérisateur",
                "controller": "humidity_controller"
            },
            "feeding_servo": {
                "pin": 12,
                "type": "servo",
                "voltage": "5V",
                "current": "100-250mA",
                "frequency": 50,
                "description": "Servo trappe alimentation",
                "controller": "feeding_controller"
            },
            "light_relay": {
                "pin": 24,
                "type": "relay",
                "voltage": "5V",
                "current": "30mA",
                "description": "Relais éclairage LED 12V",
                "controller": "light_controller"
            },
            "fan_relay": {
                "pin": 25,
                "type": "relay",
                "voltage": "5V",
                "current": "30mA",
                "description": "Relais ventilateurs",
                "controller": "fan_controller"
            },
            "ultrasonic_mist": {
                "pin": 22,
                "type": "ultrasonic_transducer",
                "voltage": "5V",
                "current": "50mA",
                "power_watts": 2.5,
                "frequency": 1700000,
                "pwm_frequency": 1000,
                "description": "Transducteur ultrasonique ANGEEK 1/2 avec contrôle PWM",
                "controller": "ultrasonic_mist_controller"
            }
        },
        "display": {
            "lcd_st7735": {
                "type": "ST7735",
                "resolution": "128x160",
                "spi_pins": {
                    "dc": 8,
                    "cs": 7,
                    "rst": 9
                },
                "voltage": "3.3V",
                "current": "150mA",
                "backlight_pin": 10,
                "description": "Écran LCD couleur ST7735",
                "controller": "lcd_menu_controller"
            }
        },
        "inputs": {
            "rotary_encoder": {
                "clk_pin": 5,
                "dt_pin": 6,
                "sw_pin": 11,
                "type": "rotary_encoder",
                "voltage": "3.3V",
                "current": "negligible",
                "pull_up": true,
                "description": "Encodeur rotatif pour navigation menu",
                "controller": "lcd_menu_controller"
            }
        },
        "status": {
            "status_led": {
                "pin": 13,
                "type": "led",
                "voltage": "3.3V",
                "current": "20mA",
                "description": "LED de statut système"
            },
            "power_led": {
                "pin": 19,
                "type": "led",
                "voltage": "3.3V",
                "current": "20mA",
                "description": "LED d'alimentation"
            }
        }
    },
    "power_supply": {
        "main_voltage": "5V",
        "led_strip_voltage": "12V",
        "servo_voltage": "5V",
        "sensors_voltage": "3.3V",
        "relay_voltage": "5V",
        "ultrasonic_voltage": "5V"
    },
    "servo_config": {
        "feeding_trap": {
            "open_angle": 90,
            "close_angle": 0,
            "open_duration": 5,
            "min_pulse": 500,
            "max_pulse": 2500
        }
    },
    "relay_config": {
        "active_high": false,
        "default_state": false,
        "safety_delay": 100
    },
    "fan_config": {
        "count": 4,
        "voltage": "5V",
        "current_per_fan": "200mA",
        "total_current": "800mA",
        "control": "relay",
        "min_runtime": 30
    },
    "led_strip_config": {
        "voltage": "12V",
        "current_per_meter": "600mA",
        "length_meters": 1,
        "total_power": "7.2W",
        "control": "relay_with_converter"
    },
    "ultrasonic_mist_config": {
        "voltage": "5V",
        "current": "50mA",
        "power_watts": 2.5,
        "frequency": 1700000,
        "pwm_frequency": 1000,
        "max_continuous_time": 300,
        "cooldown_time": 60,
        "description": "Transducteur ultrasonique ANGEEK 1/2 avec contrôle PWM"
    },
    "camera_config": {
        "type": "CSI",
        "resolution": "1920x1080",
        "framerate": 30,
        "format": "MJPEG",
        "description": "Caméra CSI pour surveillance terrarium",
        "stream_port": 8080,
        "capture_path": "/var/www/html/captures"
    },
    "lcd_config": {
        "type": "ST7735",
        "resolution": "128x160",
        "spi_pins": {
            "dc": 8,
            "cs": 7,
            "rst": 9
        },
        "voltage": "3.3V",
        "current": "150mA",
        "backlight_pin": 10,
        "rotation": 0,
        "color_mode": "RGB565"
    },
    "menu_config": {
        "rotary_encoder": {
            "clk_pin": 5,
            "dt_pin": 6,
            "sw_pin": 11
        },
        "debounce_time": 50,
        "long_press_time": 1000,
        "rotation_sensitivity": 1,
        "items_per_page": 6
    },
    "water_level_config": {
        "type": "HC-SR04P",
        "trigger_pin": 20,
        "echo_pin": 21,
        "voltage": "3.3V",
        "current": "15mA",
        "min_distance": 5,
        "max_distance": 30,
        "reservoir_height": 25,
        "low_level_threshold": 20,
        "critical_level_threshold": 5,
        "description": "Capteur niveau d'eau réservoir"
    },
    "radiator_temp_config": {
        "type": "DS18B20",
        "pin": 26,
        "voltage": "3.3V",
        "current": "1mA",
        "address": "auto",
        "max_safe_temp": 80.0,
        "warning_temp": 70.0,
        "min_temp": -10.0,
        "max_temp": 125.0,
        "description": "Température radiateur (sécurité)"
    },
    "watchdog_config": {
        "watchdog_pin": 18,
        "timeout_seconds": 30,
        "max_cpu_temp": 80.0,
        "max_cpu_usage": 90.0,
        "max_memory_usage": 85.0,
        "max_alerts_history": 1000,
        "description": "Service de surveillance critique du système"
    },
    "pin_assignments": {
        "TEMP_HUMIDITY_PIN": 4,
        "LIGHT_SENSOR_PIN": 17,
        "HEATING_RELAY_PIN": 18,
        "HUMIDITY_RELAY_PIN": 23,
        "FEEDING_SERVO_PIN": 12,
        "LIGHT_RELAY_PIN": 24,
        "FAN_RELAY_PIN": 25,
        "STATUS_LED_PIN": 13
    },
    "spi_config": {
        "enabled": true,
        "speed": 4000000,
        "mode": 0,
        "bits_per_word": 8
    },
    "i2c_config": {
        "enabled": true,
        "bus": 1,
        "address": "0x48"
    },
    "onewire_config": {
        "enabled": true,
        "pin": 26,
        "devices": ["DS18B20"]
    }
} 